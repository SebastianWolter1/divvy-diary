generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model User {
  id    String  @default(cuid()) @id
  name  String
  email String  @unique
  password String
  userValues PriceAlarms[]
}

model PriceAlarms {
  id       String  @default(cuid()) @id
  isin     String
  price    String
  userId   String
  user     User    @relation(fields: [userId], references: [id])
}